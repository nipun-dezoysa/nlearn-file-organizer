{
  "manifest_version": 3,
  "name": "NLearn File Organizer",
  "version": "1.0",
  "description": "Chrome Extension to Organize Downloaded Resources from nLearn",
  "permissions": ["downloads", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["*://nlearn.nsbm.ac.lk/*"],
  "content_scripts": [
    {
      "matches": ["*://nlearn.nsbm.ac.lk/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/32.png",
      "72": "icons/72.png",
      "128": "icons/128.png",
      "512": "icons/512.png"
    }
  },
  "icons": {
    "32": "icons/32.png",
    "72": "icons/72.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  }
}
